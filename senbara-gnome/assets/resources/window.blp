using Gtk 4.0;
using Adw 1;

Adw.ApplicationWindow main_window {
    default-width: 960;
    default-height: 540;
    title: _("Senbara Forms");
    visible: true;

    Adw.Breakpoint main_breakpoint {
        condition ("max-width: 500sp")
    }

    Adw.ToastOverlay main_toasts_overlay {
        Adw.NavigationView main_navigation {}
    }
}
