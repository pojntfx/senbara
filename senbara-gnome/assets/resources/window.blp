                    sidebar: Adw.NavigationPage {
                        title: bind main_window.title;
                        tag: "/sidebar";

                        child: Adw.ToolbarView {
                            [top]
                            Adw.HeaderBar {
                                [start]
                                MenuButton home_user_menu_button {
                                    menu-model: home_user_menu;

                                    Box {
                                        halign: center;

                                        Adw.Avatar home_user_menu_avatar {
