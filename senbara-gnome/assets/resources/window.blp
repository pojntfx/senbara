                            Box {
                                spacing: 10;

                                Adw.Spinner preview_login_spinner {
                                    visible: false;
                                }

                                Label {
                                    label: _("_Login");
                                    use-underline: true;
                                }
                            }

                            styles [
                                "suggested-action",
                            ]
                        }
                    }

