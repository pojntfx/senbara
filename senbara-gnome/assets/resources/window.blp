                                    Adw.ActionRow {
                                        title: _("C_ontacts");
                                        use-underline: true;
                                        icon-name: "address-book-symbolic";
                                        name: "/contacts";
                                        activatable: true;

                                        [suffix]
                                        Box {
                                            Gtk.Label home_sidebar_contacts_count_label {
                                                label: _("0");
                                                valign: center;
                                                visible: false;

                                                styles [
                                                    "status-badge",
                                                ]
                                            }

                                            Adw.Spinner home_sidebar_contacts_count_spinner {}
                                        }

                                        styles [
                                            "sidebar-item",
                                        ]
                                    }

                                    Adw.ActionRow {
                                        title: _("_Journal");
                                        use-underline: true;
                                        icon-name: "open-book-symbolic";
                                        name: "/journals";
                                        activatable: true;

                                        [suffix]
                                        Box {
                                            Gtk.Label home_sidebar_journals_count_label {
                                                label: _("0");
                                                valign: center;
                                                visible: false;

                                                styles [
                                                    "status-badge",
                                                ]
                                            }

                                            Adw.Spinner home_sidebar_journals_count_spinner {}
                                        }

                                        styles [
                                            "sidebar-item",
                                        ]
                                    }

                                    styles [
                                        "navigation-sidebar",
                                    ]
                                }
                            };
                        };
                    };

