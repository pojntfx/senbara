                        title: _("Signing you in");
                        description: _("Waiting for authorization from browser ...");

                        Adw.Spinner {
                            width-request: 48;
                            height-request: 48;
                        }
                    }
                }
            }

            Adw.NavigationPage {
                title: _("Senbara Forms");
                tag: "/home";
                can-pop: false;

