#pragma once

#if !defined(SENBARA_GTK_MESON_INSIDE) && !defined(SENBARA_GTK_MESON_COMPILATION)
# error "Only <senbara-gtk-meson.h> can be included directly."
#endif

/**
 * SECTION:senbara-gtk-mesonversion
 * @short_description: senbara-gtk-meson version checking
 *
 * senbara-gtk-meson provides macros to check the version of the library
 * at compile-time
 */

/**
 * SENBARA_GTK_MESON_MAJOR_VERSION:
 *
 * senbara-gtk-meson major version component (e.g. 1 if %SENBARA_GTK_MESON_VERSION is 1.2.3)
 */
#define SENBARA_GTK_MESON_MAJOR_VERSION (@MAJOR_VERSION@)

/**
 * SENBARA_GTK_MESON_MINOR_VERSION:
 *
 * senbara-gtk-meson minor version component (e.g. 2 if %SENBARA_GTK_MESON_VERSION is 1.2.3)
 */
#define SENBARA_GTK_MESON_MINOR_VERSION (@MINOR_VERSION@)

/**
 * SENBARA_GTK_MESON_MICRO_VERSION:
 *
 * senbara-gtk-meson micro version component (e.g. 3 if %SENBARA_GTK_MESON_VERSION is 1.2.3)
 */
#define SENBARA_GTK_MESON_MICRO_VERSION (@MICRO_VERSION@)

/**
 * SENBARA_GTK_MESON_VERSION
 *
 * senbara-gtk-meson version.
 */
#define SENBARA_GTK_MESON_VERSION (@VERSION@)

/**
 * SENBARA_GTK_MESON_VERSION_S:
 *
 * senbara-gtk-meson version, encoded as a string, useful for printing and
 * concatenation.
 */
#define SENBARA_GTK_MESON_VERSION_S "@VERSION@"

#define SENBARA_GTK_MESON_ENCODE_VERSION(major,minor,micro) \
        ((major) << 24 | (minor) << 16 | (micro) << 8)

/**
 * SENBARA_GTK_MESON_VERSION_HEX:
 *
 * senbara-gtk-meson version, encoded as an hexadecimal number, useful for
 * integer comparisons.
 */
#define SENBARA_GTK_MESON_VERSION_HEX \
        (SENBARA_GTK_MESON_ENCODE_VERSION (SENBARA_GTK_MESON_MAJOR_VERSION, SENBARA_GTK_MESON_MINOR_VERSION, SENBARA_GTK_MESON_MICRO_VERSION))

/**
 * SENBARA_GTK_MESON_CHECK_VERSION:
 * @major: required major version
 * @minor: required minor version
 * @micro: required micro version
 *
 * Compile-time version checking. Evaluates to %TRUE if the version
 * of senbara-gtk-meson is greater than the required one.
 */
#define SENBARA_GTK_MESON_CHECK_VERSION(major,minor,micro)   \
        (SENBARA_GTK_MESON_MAJOR_VERSION > (major) || \
         (SENBARA_GTK_MESON_MAJOR_VERSION == (major) && SENBARA_GTK_MESON_MINOR_VERSION > (minor)) || \
         (SENBARA_GTK_MESON_MAJOR_VERSION == (major) && SENBARA_GTK_MESON_MINOR_VERSION == (minor) && \
          SENBARA_GTK_MESON_MICRO_VERSION >= (micro)))
